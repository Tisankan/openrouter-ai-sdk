{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["node", "jest"] // Add jest types for testing framework
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts" // Include the test files in the build process
  ],
  "exclude": [
    "node_modules"
  ]
}
